{
  "name": "changesets-publish-validator",
  "description": "Validate npm publishing prerequisites for changesets workflows (OIDC or token-based)",
  "version": "1.0.0",
  "author": "GarthDB",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/GarthDB/changesets-publish-validator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GarthDB/changesets-publish-validator.git"
  },
  "bugs": {
    "url": "https://github.com/GarthDB/changesets-publish-validator/issues"
  },
  "keywords": [
    "actions",
    "changesets",
    "npm",
    "oidc",
    "publishing",
    "validation"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx ava",
    "coverage": "npx c8 --reporter=json-summary --reporter=text --reporter=lcov ava && npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rimraf ./dist && npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "npx ava",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^1.1.1",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^6.0.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.32.1",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "esmock": "^2.7.3",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.7.4",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.54.0",
    "tsimp": "^2.0.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
